<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmRoute"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackRouteInProgress">

    <TextView
        android:id="@+id/tv_longtitute"
        android:layout_width="229dp"
        android:layout_height="48dp"
        android:layout_marginBottom="540dp"
        android:text="longtitude: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_latitude"
        app:layout_constraintTop_toBottomOf="@+id/tv_latitude" />

    <TextView
        android:id="@+id/tv_latitude"
        android:layout_width="224dp"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="141dp"
        android:text="latitude: "
        app:layout_constraintBottom_toTopOf="@+id/tv_speed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="227dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="461dp"
        android:text="Speed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_longtitute"
        app:layout_constraintTop_toBottomOf="@+id/tv_latitude" />

    <Button
        android:id="@+id/addRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="168dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_speed" />

</androidx.constraintlayout.widget.ConstraintLayout>